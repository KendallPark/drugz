<div class="panel panel-default">
  <div class="panel-heading">
    <h3>{{currentSectionTitle}}</h3>
  </div>
  <div class="panel-body {{if submitted 'finished'}}">
    {{drug-section section=currentSection sectionId=currentSectionIndex disabled=disabled}}
  </div>
  <div class="panel-footer">
    <button class="btn btn-primary prev-btn" {{action "prevSection"}}>Prev</button>
    <button class="btn btn-default" {{action "submit"}}>Check Answers</button>
    <button class="btn btn-primary next-btn" {{action "nextSection"}}>Next</button>
    <div class="progress">
      <div class="progress-bar" role="progressbar" style="width: {{percentCorrect}}%;">
        {{questionNumber}}/{{data.length}}
      </div>
    </div>
  </div>
</div>
